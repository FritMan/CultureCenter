<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CultureCenter.Pages.DataControl">
	<Grid ColumnDefinitions="*" RowDefinitions="50, *, 90">

		<Button Name="BackBtn" Content="Назад" HorizontalAlignment="Center" Grid.Column="1"
				Grid.Row="0"/>
		<DataGrid Name="EventDG" Grid.Column="0" Grid.Row="1" BorderBrush="Black"
				  BorderThickness="5" Margin="5" IsReadOnly="True">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Дата:" Binding="{Binding EventDate}"/>
				<DataGridTextColumn Header="Вид мероприятия:" Binding="{Binding Types.Name}"/>
				<DataGridTextColumn Header="Описание:" Binding="{Binding Description}"/>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center">
			<Button Name="AddEventBtn" Content="Добавить" Margin="5"/>
			<Button Name="EditEventBtn" Content="Изменить" Margin="5"/>
			<Button Name="DeleteEventBtn" Content="Удалить" Background="Red" Margin="5"/>
		</StackPanel>
	</Grid>
</UserControl>
